<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/select")
    
</head>
<style>
    body {
        padding-top: 120px; /* 120px to make the container go all the way to the bottom of the topbar */
    }
</style>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">NFB2T</a>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    @Html.Partial("_MenuPartial")
                }
                else
                {
                    @Html.Partial("_LoginPartial")
                }

            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>

    <div class="container bs-docs-container">

        <div class="row">

            <div class="col-md-9" role="man">
                @if (TempData["ErrorMessage"] != null)
                { @Html.Partial("_ErrorMessagePartial") }
                @if (TempData["WarningMessage"] != null)
                { @Html.Partial("_WarningMessagePartial") }
                @if (TempData["SucessMessage"] != null)
                { @Html.Partial("_SucessMessagePartial") }
                @if (TempData["InfoMessage"] != null)
                { @Html.Partial("_InfoMessagePartial") }

                @RenderBody()

            </div>

        </div>


    </div>
    <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/maskedinput")
    @Scripts.Render("~/bundles/select")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)

</body>
</html>
